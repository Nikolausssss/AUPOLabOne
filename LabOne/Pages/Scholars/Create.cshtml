@page
@model LabOne.Pages.Scholars.CreateModel
@{
    ViewBag.Title = "Create Scholar";
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Scholar.FirstName" class="control-label"></label>
                <input asp-for="Scholar.FirstName" class="form-control" />
                <span asp-validation-for="Scholar.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scholar.SecondName" class="control-label"></label>
                <input asp-for="Scholar.SecondName" class="form-control" />
                <span asp-validation-for="Scholar.SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scholar.Surname" class="control-label"></label>
                <input asp-for="Scholar.Surname" class="form-control" />
                <span asp-validation-for="Scholar.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scholar.CourseId" class="control-label">Course</label>
                <select asp-for="Scholar.CourseId" asp-items="ViewBag.CoursesId" class="form-control"></select>
                <span asp-validation-for="Scholar.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
